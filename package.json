{
  "version": "2.1.0",
  "scripts": {
    "prepare": "pnpm husky install",
    "lint": "pnpm --filter './apps/**' --filter './packages/**' lint",
    "lint:error": "pnpm --filter './apps/**' --filter './packages/**' lint:error",
    "tsc": "pnpm --filter './apps/**' --filter './packages/**' tsc",
    "build": "pnpm --filter './apps/**' --filter './packages/**' build",
    "version": "ns-version up -i patch",
    "version:minor": "ns-version up -i minor",
    "version:major": "ns-version up -i major"
  },
  "devDependencies": {
    "@nextstarproject/version": "^1.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "husky": "^8.0.3",
    "netlify-cli": "^15.11.0",
    "prettier": "^2.8.8"
  }
}
